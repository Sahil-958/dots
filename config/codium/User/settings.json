{
  "editor.mouseWheelZoom": true,
  "terminal.integrated.fontFamily": "ComicShannsMono Nerd Font",
  // appearance
  "editor.fontFamily": "Cascadia Code NF",
  "editor.fontLigatures": true,
  "editor.fontVariations": true,
  "workbench.colorTheme": "Catppuccin Mocha",
  "editor.minimap.enabled": true,
  "workbench.tips.enabled": true,
  "workbench.startupEditor": "welcomePage",
  "breadcrumbs.enabled": true,
  "workbench.editor.showTabs": "multiple",
  "window.commandCenter": false,
  "window.customTitleBarVisibility": "auto",
  "window.density.editorTabHeight": "default",
  "window.menuBarVisibility": "visible",
  "window.restoreWindows": "all",
  "editor.cursorSurroundingLines": 10,
  "editor.defaultFormatter": "esbenp.prettier-vscode",
  "editor.formatOnSave": true,

  "editor.stickyScroll.enabled": false,

  "vim.leader": "<space>",
  "vim.showmodename": true,
  "vim.incsearch": true,
  "vim.easymotion": true,
  "vim.replaceWithRegister": true,
  "vim.smartRelativeLine": false,
  "vim.relativeLineNumbers": false,
  "vim.surround": true,
  "vim.useCtrlKeys": true,
  "vim.smartcase": true,
  "vim.ignorecase": true,
  "vim.foldfix": true,
  "vim.highlightedyank.enable": true,
  "vim.highlightedyank.textColor": "white",
  // highlighted yank
  "vim.highlightedyank.duration": 250,
  "vim.useSystemClipboard": false,
  "vim.hlsearch": true,
  "vim.normalModeKeyBindings": [],
  "vim.insertModeKeyBindings": [
    {
      "before": ["<c-j>"],
      "after": ["<CR>"]
    }
  ],
  "vim.normalModeKeyBindingsNonRecursive": [
    {
      "before": ["|"],
      "after": ["<c-w>", "v"]
    },
    {
      "before": ["\\"],
      "after": ["<c-w>", "s"]
    },
    {
      "before": ["<c-h>"],
      "after": ["<c-w>", "h"]
    },
    {
      "before": ["<c-l>"],
      "after": ["<c-w>", "l"]
    },
    {
      "before": ["<c-j>"],
      "after": ["<c-w>", "j"]
    },
    {
      "before": ["<c-k>"],
      "after": ["<c-w>", "k"]
    },

    {
      "before": ["<c-u>"],
      "after": ["<c-u>", "z", "z"]
    },
    {
      "before": ["<c-d>"],
      "after": ["<c-d>", "z", "z"]
    },
    {
      "before": ["leader", "s", "c"],
      "commands": [":nohl"]
    },

    {
      "before": ["f"],
      "after": ["<leader>", "<leader>", "s"]
    },
    {
      "before": ["[", "d"],
      "commands": ["editor.action.marker.prev"]
    },
    {
      "before": ["]", "d"],
      "commands": ["editor.action.marker.next"]
    },
    {
      "before": ["<leader>", "a"],
      "commands": ["editor.action.quickFix"]
    },
    {
      "before": ["<leader>", "s"],
      "commands": ["editor.action.triggerSuggest"]
    },
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    },
    {
      "before": ["n"],
      "after": ["n", "z", "z"]
    },
    {
      "before": ["N"],
      "after": ["N", "z", "z"]
    },
    {
      "before": ["g", "d"],
      "commands": ["editor.action.revealDefinition"]
    },
    {
      "before": ["g", "p", "d"],
      "commands": ["editor.action.peekDefinition"]
    },
    {
      "before": ["g", "I"],
      "commands": ["editor.action.goToImplementation"]
    },
    {
      "before": ["g", "p", "I"],
      "commands": ["editor.action.peekImplementation"]
    },
    {
      "before": ["g", "D"],
      "commands": ["editor.action.revealDeclaration"]
    },
    {
      "before": ["g", "r"],
      "commands": ["editor.action.goToReferences"]
    },
    {
      "before": ["g", "R"],
      "commands": ["references-view.findReferences"]
    },
    {
      "before": ["g", "t"],
      "commands": ["editor.action.goToTypeDefinition"]
    },
    {
      "before": ["g", "p", "t"],
      "commands": ["editor.action.peekTypeDefinition"]
    },
    {
      "before": ["g", "L"],
      "commands": ["workbench.actions.view.problems"]
    }
  ],
  "vim.visualModeKeyBindingsNonRecursive": [
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    }
  ],
  "vim.operatorPendingModeKeyBindings": [
    {
      "before": ["H"],
      "after": ["^"]
    },
    {
      "before": ["L"],
      "after": ["$"]
    }
  ],
  "vim.visualModeKeyBindings": [
    {
      "before": [">"],
      "commands": ["editor.action.indentLines"]
    },
    {
      "before": ["<"],
      "commands": ["editor.action.outdentLines"]
    }
  ],
  "vim.operatorPendingModeKeyBindingsNonRecursive": [
    {
      "before": ["("],
      "after": ["i("]
    }
  ],
  "vim.handleKeys": {
    "<C-n>": false,
    "<C-j>": false,
    "<C-k>": false,
    "<C-p>": false,
    "<C-d>": true
  }
}
