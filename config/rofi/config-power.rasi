/* ---- Load pywal colors (custom wal template) ---- */
@import "~/.cache/wal/colors-rofi-pywal"

/*****----- Configuration -----*****/
configuration {
    show-icons:                 false;
}

/*****----- Main Window -----*****/
window {
    transparency:                "real";
    location:                    center;
    anchor:                      center;
    fullscreen:                  false;
    width:                       80%;
    height:                      80%;
    border-radius:               0;
    border:                      4px;
    border-color:                @foreground;
    cursor:                      "default";
}

/*****----- Main Box -----*****/
mainbox {
    enabled:                     true;
    orientation:                 vertical;
    spacing:                     3%;
    margin:                      0;
    padding:                     18% 8% 8% 8%;        
    background-color:            transparent;
    children:                    [ "greeting", "listview", "message" ];
}

prompt {
    enabled:                     false;
    font:                        "ComicShannsMono Nerd Font Bold 14";
    background-color:            @trans-background;
    margin:                      0 0 6% 0;
    padding:                     4% 16%;
    border:                      2px 2px 15px 2px;
    border-radius:               0 0 6px 6px;
    border-color:                @foreground;
    text-color:                  @foreground;
}

//*****----- Greeting Message -----*****/
greeting {
    expand:                      false;
    margin:                      0 0 4% 0;
    padding:                     40px 0;
    border-radius:               6px;
    border:                      2;
    background-color:            @trans-background;
    text-color:                  @foreground;
    children:                    [ "textbox-greeting" ];
}

textbox-greeting {
  content:                     "Enter you greeting message from script";
  font:                        "ComicShannsMono Nerd Font Bold 28";
  background-color:            transparent;
  text-color:                  inherit;
  vertical-align:              0.5;
  horizontal-align:            0.5;
  expand:                      true;
}

//*****----- Message -----*****/
message {
    enabled:                     true;
    margin:                      0;
    padding:                     50px 0;
    border-radius:               6px;
    border:                      2;
    background-color:            @trans-background;
    text-color:                  @foreground;
}

textbox {
    expand:                      true;
    font:                        "ComicShannsMono Nerd Font Bold 18";
    background-color:            transparent;
    text-color:                  inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
}

/*****----- Listview -----*****/
listview {
    enabled:                     true;
    expand:                      false;
    columns:                     4;
    lines:                       1;
    cycle:                       true;
    dynamic:                     true;
    scrollbar:                   false;
    layout:                      vertical;
    reverse:                     false;
    fixed-height:                true;
    fixed-columns:               true;
    spacing:                     5;
    padding:                     0;
    border:                      0;
    border-radius:               0;
    background-color:            transparent;
    cursor:                      "default";
    margin:                      0;
}

/*****----- Elements -----*****/
element {
    enabled:                     true;
    padding:                     3% 6%;
    border-radius:               5px;
    background-color:            @background;
    text-color:                  @foreground;
    border:                      2 2 15px 2;
    border-radius:               0 0 6 6;
    border-color:                @background; 
    cursor:                      pointer;
}

element-text {
    font:                       "CommicShannsMono Nerd Font 48";
    background-color:            transparent;
    expand:                      true;
    text-color:                  inherit;
    cursor:                      inherit;
    vertical-align:              0.5;
    horizontal-align:            0.5;
}

element selected.normal {
    background-color:            @background;
    text-color:                  @foreground;
    border-color:                @foreground;
}

element normal.normal {
    background-color:            @background;
    text-color:                  @trans-foreground;
    border-color:                @color2;
}

element alternate.normal {
    background-color:            @background;
    text-color:                  @trans-foreground;
    border-color:                @color2;
}

@import "~/.cache/current_wall.rasi"
