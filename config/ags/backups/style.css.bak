}
 */

.NotificationTitleLabel {
    color: @foreground;
    font-size: 1.4em;
}

.NotificationTitleBox {
    border-bottom: 1px solid @foreground;
}

.NotificationIconAndTitleBox {
    margin-bottom: 12px;
}

.NotificationBodyLabel {
    color: @foreground;
    padding: 5px;
    border: 1px solid @foreground;
    border-radius: 5px;
}

.NotificationActionsBox {
    /*    margin: 10px 0 0 0;*/
}

.NotificationActionButton,
.NotificationActionButton:active {
    background-color: alpha(@color1, .4);
    color: @foreground;
    border: none;
    padding: 5px;
    border-radius: 5px;
    margin: 0 5px;
}

.NotificationActionButton:hover {
    background-color: @color1;
    color: @foreground;
}

.NotificationActionButton:first-child {
    margin-left: 0;
}

.NotificationActionButton:first-child:last-child {
    margin-right: 0;
}

.NotificationGroup {
    border-radius: 5px;
    padding: 10px;
    margin: 0 0 10px 0;
    background-color: alpha(@color1, .6);
    border: 2px solid @foreground;
}

.NotificationGroupRevealer {
    background-color: red;
}

/*_______________________________________________________*/

.DndBox {
    background-color: alpha(@color1, .4);
    border-radius: 5px;
    padding: 10px;
}

.DndLabel {
    color: @foreground;
    font-size: 20px;
}

.DndSwitch {
    background-color: alpha(@color1, .6);
    color: @foreground;
}
