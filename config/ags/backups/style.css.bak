/*_______________________________________________________*/

.MediaBox {
    background-color: alpha(@color1, .4);
    border-radius: 5px;
    padding: 12px;
}

.MediaPlayer {
    background-color: alpha(@color1, .4);
    border-radius: 5px;
    padding: 10px;
}

.MediaPlayerImage {
    border: 1px solid @foreground;
    background-size: contain;
    background-repeat: no-repeat;
    background-position: center;
    border-radius: 10px;
    margin-right: 10px;
}

.MediaPlayerTitle {
    color: @foreground;
    font-size: 18px;
    font-weight: bold;
}

.MediaPlayerArtist {
    color: @foreground;
    font-size: 12px;
}

.MediaPlayerSlider {
    margin: 10px 0px;
}

.MediaPlayerSliderLabelTimeElapsed {
    color: @foreground;
    font-size: 16px;
}

.MediaPlayerSliderLabelTotalTime {
    color: @foreground;
    font-size: 16px;
}

.MediaPlayerIcon {
    color: @foreground;
    font-size: 20px;
}

.MediaPlayerPlayPauseButton,
.MediaPlayerNextButton,
.MediaPlayerPrevButton {
    background-color: transparent;
    border: none;
    padding: 0px;
    margin: 0 4px;
}

/*_______________________________________________________*/

.NotificationMainBox {
    background-color: alpha(@color1, .4);
    border-radius: 5px;
    padding: 12px;
}

.NotificationHeaderBox {
    background-color: alpha(@color1, .4);
    border-radius: 5px;
    padding: 12px;
}

.NotificationHeaderLabel {
    color: @foreground;
    font-size: 1.4em;
}


.NotificationHeaderClearButton {
    color: alpha(@foreground, .6);
    border: none;
    background-color: transparent;
    padding: 5px;
    font-size: 1.4em;
}

.NotificationHeaderClearButton:hover {
    color: @foreground;
}

.NotificationContainerScrollable {
    background-color: @background;
    border: 1px solid @foreground;
    border-radius: 5px;
    padding: 10px;
}

.NotificationContainerScrollable scrollbar trough {
    background-color: @background;
    border-radius: 5px;
}

.NotificationContainerScrollable scrollbar trough slider {
    background-color: @foreground;
}

.NotificationBox {
    border-radius: 5px;
    padding: 10px;
    margin: 0 0 10px 0;
    background-color: alpha(@color1, .6);
    border: 2px solid @foreground;
}

.NotificationBox.critical {
    border: 3px solid @foreground;
}

.NotificationBox.low {
    border: none;
}

.NotificationIconAndImageContainerBox {
    border-radius: 5px;
    padding: 10px;
    border: 1px solid @foreground;
}

