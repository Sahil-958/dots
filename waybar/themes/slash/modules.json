{
   
    // Wallpaper
    "custom/wallpaper": {
        "format": "",
        "on-click": "~/dots/scripts/wallpaper.sh select",
        "on-click-right": "~/dots/scripts/wallpaper.sh",
        "tooltip": false
    },

    // Waybar Themes
    "custom/waybarthemes": {
        "format": "",
        "on-click": "~/dots/waybar/themeswitcher.sh",
        "tooltip": false
    },


    "group/stat": {
        "orientation": "horizontal",
        "modules": [
            "disk",
            "memory",
            "cpu",
         ]
    },

    "cpu": {
        "interval": 10,
        "format": "󰍛 {usage}%",
        "format-alt": "{icon0}{icon1}{icon2}{icon3}",
        "format-icons": ["▁", "▂", "▃", "▄", "▅", "▆", "▇", "█"],
        "on-left-click": "konsole -e btop"
    },
    
    "memory": {
        "interval": 30,
        "format": "󰾆 {percentage}%",
        "format-alt": "󰾅 {used}GB",
        "max-length": 10,
        "tooltip": true,
        "tooltip-format": " {used:0.1f}GB/{total:0.1f}GB",
        "on-click": "konsole -e btop"
    },

    "disk": {
        "interval": 30,
        "format": " {percentage_used}% ",
        "path": "/",
        "on-click": "konsole -e btop"
    }, 

        // Group Devices
    "group/devices": {
        "orientation": "horizontal",
        "modules": [
            "network",
            "pulseaudio",
            "bluetooth",
            "backlight",
            "battery",
         ]
    },

        // Group System
    "group/system": {
        "orientation": "horizontal",
        "modules": [
            "tray",
            "custom/wallpaper",
            "custom/waybarthemes",
            "custom/cliphist",
            "custom/power",
         ]
    },

    "bluetooth": {
        "format": "",
        "format-disabled": "", // an empty format will hide the module
        "format-connected": " {num_connections}",
        "on-click": "blueman-manager",
        "on-click-right": "blueman-manager",
        "tooltip-format": " {device_alias}",
        "tooltip-format-connected": "{device_enumerate}",
        "tooltip-format-enumerate-connected": " {device_alias}"
    },

    // Cliphist
    "custom/cliphist": {
        "format": "",
        "on-click": "sleep 0.1 && ~/dots/scripts/cliphist.sh",
        "on-click-right": "sleep 0.1 && ~/dots/scripts/cliphist.sh d",
        "on-click-middle": "sleep 0.1 && ~/dots/scripts/cliphist.sh w",
	"on-scroll-up": "sleep 0.1 && ~/dots/scripts/cliphist.sh q",
        "tooltip": false
    },

    // Clock
    "clock": {
    "format": "{:%H:%M} ",
    "format-alt": "{:%A, %B %d, %Y (%R)}",
    "tooltip-format": "<tt><small>{calendar}</small></tt>",
    "calendar": {
                "mode"          : "month",
                "mode-mon-col"  : 2,
                "weeks-pos"     : "left",
                "on-scroll"     : 1,
                "on-click-right": "mode",
                "format": {
                          "months":     "<span color='#ffead3'><b>{}</b></span>",
                          "days":       "<span color='#ecc6d9'><b>{}</b></span>",
                          "weeks":      "<span color='#99ffdd'><b>W{}</b></span>",
                          "weekdays":   "<span color='#ffcc66'><b>{}</b></span>",
                          "today":      "<span color='#ff6699'><b><u>{}</u></b></span>"
                          }
                },
    "actions":  {
                "on-click-right": "mode",
                "on-click-forward": "tz_up",
                "on-click-backward": "tz_down",
                "on-scroll-up": "shift_up",
                "on-scroll-down": "shift_down"
                }
    },


       // Battery
    "battery": {
	"interval":30,
        "states": {
            // "good": 95,
            "warning": 30,
            "critical": 15
        },
        "format": "{icon} {capacity}%",
        "format-charging": "  {capacity}%",
        "format-plugged": "  {capacity}%",
        "format-alt": "{icon}  {time}",
        // "format-good": "", // An empty format will hide the module
        // "format-full": "",
        "format-icons": [" ", " ", " ", " ", " "],
	"on-click": "kinfocenter kcm_energyinfo"
    },

    // Rofi Application Launcher
    "custom/appmenu": {
        "format": "Apps",
        "on-click": "rofi -show drun",
        "tooltip": false
    },

   

    // Network
    "network": {
    	"interval":1,
        "format": "{ifname}",
        "format-wifi": "  {signalStrength}%  {bandwidthDownBits}  {bandwidthUpBits}",
        "format-ethernet": " {ipaddr}",
        "format-disconnected": "Not connected", //An empty format will hide the module.
        "tooltip-format": " {ifname} via {gwaddri}",
        "tooltip-format-wifi": "  {essid} ({signalStrength}%)",
        "tooltip-format-ethernet": "  {ifname} ({ipaddr}/{cidr})",
        "tooltip-format-disconnected": "Disconnected",
        "max-length": 50,
        "on-click": "konsole -e nmtui"
    },

    // Power Menu
    "custom/power": {
        "format": "",
        "on-click": "wlogout",
        "tooltip": false
    },

    // Pulseaudio
    "pulseaudio": {
        // "scroll-step": 1, // %, can be a float
        "format": "{icon}{volume}%",
        "format-bluetooth": "{volume}% {icon} {format_source}",
        "format-bluetooth-muted": " {icon} {format_source}",
        "format-muted": " {format_source}",
        "format-source": "{volume}% ",
        "format-source-muted": "",
        "format-icons": {
            "headphone": "",
            "hands-free": "",
            "headset": "",
            "phone": "",
            "portable": "",
            "car": "",
            "default": ["", " ", " "]
        },
        "on-click": "pavucontrol"
    },

   // System tray
    "tray": {
        "icon-size": 16,
        "spacing": 10
    },


   //Brightness 
    "backlight": {
    "device": "intel_backlight",
    "format": "{icon} {percent}%",
    "format-icons": [ "󰛩","󱩎","󱩎","󱩐","󱩑","󱩒","󱩓","󱩔","󱩕","󱩖","󰛨"  ],
    },

    
   // Workspaces
    "hyprland/workspaces" : {
        "on-click": "activate",
        "active-only": false,
        "all-outputs": true,
        "format": "{}",
        "format-icons": {
			"urgent": "",
			"active": "",
			"default": ""
        },
        "persistent_workspaces": {
             "*": 5
        }       
    },

    // Taskbar
    "wlr/taskbar": {
        "format": "{icon}",
        "icon-size": 18,
        "tooltip-format": "{title}",
        "on-click": "activate",
        "on-click-middle": "close",
        "ignore-list": [
           "Alacritty",
           "GLava"
        ],
        "app_ids-mapping": {
            "firefoxdeveloperedition": "firefox-developer-edition"
        },
        "rewrite": {
            "Firefox Web Browser": "Firefox",
            "Foot Server": "Terminal"
        }
    },

    // Hyprland Window
    "hyprland/window": {
        "rewrite": {
            "(.*) - LibreWolf": "$1",
            "(.*) - Chromium": "$1",
            "(.*) - Brave Search": "$1",
            "(.*) - Outlook": "$1",
            "(.*) Microsoft Teams": "$1"
        },
        "separate-outputs": true,
        "max-length": 50,

    },
   

}
